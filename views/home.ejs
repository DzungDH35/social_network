<body>

<%- include('topbar', {current: user}); %>

<div class="home__page">
    <div class="left">
        <%- include('grouplist', {groups: groups})%>
    </div>
    <div class="center">
        <%- include('newpost') %>
    </div>
    <div class="right">
        <div class="friend__container">
            <div class="title">
                <h3>Friend List</h3>
                <div class="input--search">
                    <input type="text" placeholder="Search">
                </div>
            </div>
            <%- include('followinglist', {following: following}); %>
            <div class="title groups">
                <h3>Groups</h3>
            </div>
            <%- include('listgroupchat'); -%>
        </div>
    </div>
</div>
